{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "description": "This schema models the Neuro-QoL Lower Extremity Function (Mobility) – Short Form.",
    "type": "object",

    "references": [
        {
            "description": "The the Neuro-QoL Lower Extremity Function (Mobility) – Short Form",
            "url": "http://www.healthmeasures.net/administrator/components/com_instruments/uploads/15-09-01_01-58-12_Neuro-QOLv1.0-LowerExtremityFunction-MobilitySF_03-14-2014.pdf"
        }
    ],

    "definitions": {
        "survey": {
            "$ref": "survey-0.x.json"
        },
        "survey_item": {
            "$ref": "survey-item-0.x.json"
        },
        "survey_categorical_answer": {
            "$ref": "survey-categorical-answer-0.x.json"
        },
        "survey_categorical_answer_item": {
            "description": "A survey item that has one categorical answer.",
            "allOf": [
                {
                    "$ref": "#/definitions/survey_item"
                },
                {
                    "type": "object",
                    "properties": {
                        "answers": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/survey_categorical_answer"
                            },
                            "maxItems": 1
                        }
                    }
                }
            ]
        },
        "frequency_scale_item": {
            "description": "A categorical answer item where the answer is one of the four frequency categories from PHQ-9.",
            "allOf": [
                {
                    "$ref": "#/definitions/survey_categorical_answer_item"
                },
                {
                    "type": "object",
                    "properties": {
                        "answers": {
                            "items": {
                                "enum": [
                                    {
                                        "code": 1,
                                        "value": "Unable to do"
                                    },
                                    {
                                        "code": 2,
                                        "value": "With much difficulty"
                                    },
                                    {
                                        "code": 3,
                                        "value": "With some difficulty"
                                    },
                                    {
                                        "code": 4,
                                        "value": "With a little difficulty"
                                    },
                                    {
                                        "code": 5,
                                        "value": "Without any difficulty"
                                    }
                                ]
                            }
                        }
                    }
                }
            ]
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/survey"
        },
        {
            "properties": {
                "items": {
                    "type": "array",
                    "minItems": 8,
