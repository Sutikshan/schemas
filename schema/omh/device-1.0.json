{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "description": "This schema represents a device (consumer- or research-grade) that records some data about the individual.",
    "type": "object",

    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the device."
        },
        "manufacturer": {
            "type": "string",
            "description": "The manufacturer of the device."
        },
        "model": {
            "type": "string",
            "description": "The model of the device."
        },
        "firmware": {
            "type": "string",
            "description": "The firmware of the device."
        },
        "url": {
            "type": "string",
            "description": "Pointer to relevant documentation on the device, particularly in the case of prototypes / research-grade sensors."
        },
        "hardware_address": {
            "type": "string",
            "description": "The hardware address of the device."
        },
        "id": {
            "type": "string",
            "description": "The UDI or UPC/serial number or any other unique identification of the source device."
        },
        "id_type": {
            "type": "string",
            "anyOf": [
                {
                    "type": "string"
                },
                {
                    "enum": ["FDA","UPC"]
                }
            ]
        }
    },

    "required": [
        "name"
    ]
}