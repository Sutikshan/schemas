{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "description": "This schema represents an application that records some data about the individual.",
    "type": "object",

    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the application."
        },
        "id": {
            "type": "string",
            "description": "The id of the application."
        },
        "provider": {
            "type": "string",
            "description": "The provider of the application."
        },
        "url": {
            "type": "string",
            "description": "The URL of the application.",
            "format": "uri"
        },
        "version": {
            "type": "string",
            "description": "The version of the application."
        },
        "platforms": {
            "type": "array",
            "items": [
                {
                    "os": {
                        "type": "string"
                    },
                    "version": {
                        "type": "string"
                    },
                    "url": {
                        "type": "string",
                        "description": "The URL of the application.",
                        "format": "uri"
                    }
                }
            ]
        },
        "accuracy": {
            "type": "string",
            "description": "A measure of the accuracy of the application, according to its specifications."
        }
    },
    "required": [
        "name"
    ]
}
