{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "This schema represents a (full or partial) date value answer to a survey question.",

    "type": "object",
    "definitions": {
        "answer": {
            "$ref": "survey-answer-0.x.json"
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/answer"
        },
        {
            "properties": {
                "value": {
                    "oneOf": [
                        {
                            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
                        },
                        {
                            "pattern": "^[0-9]{4}-[0-9]{2}$"
                        },
                        {
                            "pattern": "^[0-9]{4}$"
                        }
                    ]
                }
            }
        }
    ]
}