{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "description": "This schema models the Patient Health Questionnaire 9 (PHQ-9).",
    "type": "object",

    "references": [
        {
            "description": "The LOINC code represents PHQ-9 quick depression assessment panel:-:Pt:^Patient:-:Reported.PHQ",
            "url": "http://purl.bioontology.org/ontology/LNC/44249-1"
        },
        {
            "description": "An overview of the PHQ-9 questionnaire.",
            "url": "http://www.cqaimh.org/pdf/tool_phq9.pdf"
        }
    ],

    "definitions": {
        "survey": {
            "$ref": "survey-0.x.json"
        },
        "survey_item": {
            "$ref": "survey-item-0.x.json"
        },
        "survey_categorical_answer": {
            "$ref": "survey-categorical-answer-0.x.json"
        },
        "survey_categorical_answer_item": {
            "description": "A survey item that has one categorical answer.",
            "allOf": [
                {
                    "$ref": "#/definitions/survey_item"
                },
                {
                    "type": "object",
                    "properties": {
                        "answers": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/survey_categorical_answer"
                            },
                            "maxItems": 1
                        }
                    }
                }
            ]
        },
        "frequency_scale_item": {
            "description": "A categorical answer item where the answer is one of the four frequency categories from PHQ-9.",
            "allOf": [
                {
                    "$ref": "#/definitions/survey_categorical_answer_item"
                },
                {
                    "type": "object",
                    "properties": {
                        "answers": {
                            "items": {
                                "enum": [
                                    {
                                        "code": 0,
                                        "value": "Not at all"
                                    },
                                    {
                                        "code": 1,
                                        "value": "Several days"
                                    },
                                    {
                                        "code": 2,
                                        "value": "More than half the days"
                                    },
                                    {
                                        "code": 3,
                                        "value": "Nearly every day"
                                    }
                                ]
                            }
                        }
                    }
                }
            ]
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/survey"
        },
        {
            "properties": {
                "items": {
                    "type": "array",
                    "minItems": 10,
                    "items": [
                        {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/frequency_scale_item"
                                },
                                {
                                    "properties": {
                                        "question": {
                                            "enum": [
                                                {
                                                    "label": "1",
                                                    "text": "Over the last 2 weeks, how often have you been bothered by having little interest or pleasure in doing things?"
                                                }
                                            ]
                                        }
                                    }
                                }
                            ]
                        },
                        {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/frequency_scale_item"
                                },
                                {
                                    "properties": {
                                        "question": {
                                            "enum": [
                                                {
                                                    "label": "2",
                                                    "text": "Over the last 2 weeks, how often have you been bothered by feeling down, depressed, or hopeless?"
                                                }
                                            ]
                                        }
                                    }
                                }
                            ]
                        },
                        {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/frequency_scale_item"
                                },
                                {
                                    "properties": {
                                        "question": {
                                            "enum": [
                                                {
                                                    "label": "3",
                                                    "text": "Over the last 2 weeks, how often have you been bothered by having trouble falling or staying asleep, or sleeping too much?"
                                                }
                                            ]
                                        }
                                    }
                                }
                            ]
                        },
                        {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/frequency_scale_item"
                                },
                                {
                                    "properties": {
                                        "question": {
                                            "enum": [
                                                {
                                                    "label": "4",
                                                    "text": "Over the last 2 weeks, how often have you been bothered by feeling tired or having little energy?"
                                                }
                                            ]
                                        }
                                    }
                                }
                            ]
                        },
                        {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/frequency_scale_item"
                                },
                                {
                                    "properties": {
                                        "question": {
                                            "enum": [
                                                {
                                                    "label": "5",
                                                    "text": "Over the last 2 weeks, how often have you been bothered by having poor appetite or overeating?"
                                                }
                                            ]
                                        }
                                    }
                                }
                            ]
                        },
                        {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/frequency_scale_item"
                                },
                                {
                                    "properties": {
                                        "question": {
                                            "enum": [
                                                {
                                                    "label": "6",
                                                    "text": "Over the last 2 weeks, how often have you been bothered by feeling bad about yourself â€” or that you are a failure or have let yourself or your family down?"
                                                }
                                            ]
                                        }
                                    }
                                }
                            ]
                        },
                        {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/frequency_scale_item"
                                },
                                {
                                    "properties": {
                                        "question": {
                                            "enum": [
                                                {
                                                    "label": "7",
                                                    "text": "Over the last 2 weeks, how often have you been bothered by having trouble concentrating on things, such as reading the newspaper or watching television?"
                                                }
                                            ]
                                        }
                                    }
                                }
                            ]
                        },
                        {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/frequency_scale_item"
                                },
                                {
                                    "properties": {
                                        "question": {
                                            "enum": [
                                                {
                                                    "label": "8",
                                                    "text": "Over the last 2 weeks, how often have you been bothered by moving or speaking so slowly that other people could have noticed? Or the opposite â€” being so fidgety or restless that you have been moving around a lot more than usual"
                                                }
                                            ]
                                        }
                                    }
                                }
                            ]
                        },
                        {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/frequency_scale_item"
                                },
                                {
                                    "properties": {
                                        "question": {
                                            "enum": [
                                                {
                                                    "label": "9",
                                                    "text": "Over the last 2 weeks, how often have you been bothered by thoughts that you would be better off dead or of hurting yourself in some way?"
                                                }
                                            ]
                                        }
                                    }
                                }
                            ]
                        },
                        {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/survey_categorical_answer_item"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "question": {
                                            "enum": [
                                                {
                                                    "text": "If you checked off any problems, how difficult have these problems made it for you to do your work, take care of things at home, or get along with other people?"
                                                }
                                            ]
                                        },
                                        "answers": {
                                            "items": {
                                                "enum": [
                                                    {
                                                        "value": "Not difficult at all"
                                                    },
                                                    {
                                                        "value": "Somewhat difficult"
                                                    },
                                                    {
                                                        "value": "Very difficult"
                                                    },
                                                    {
                                                        "value": "Extremely difficult"
                                                    }
                                                ]
                                            }
                                        }
                                    }
                                }
                            ]
                        }
                    ],
                    "additionalItems": false
                }
            }
        }
    ]
}